{
  "name": "request-hash",
  "version": "1.0.5",
  "description": "Generate a hash from an express Request or http.IncomingMessage",
  "author": {
    "name": "Ruy Adorno",
    "url": "http://ruyadorno.com"
  },
  "files": [
    "lib/index.js"
  ],
  "main": "lib/index.js",
  "keywords": [
    "express",
    "request",
    "hash",
    "sha",
    "uuid",
    "http",
    "https",
    "IncomingMessage",
    "md5",
    "crypto",
    "fingerprint"
  ],
  "devDependencies": {
    "coveralls": "^3.0.9",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.0"
  },
  "engines": {
    "node": ">=10"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 80
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint lib/*.js",
    "precommit": "lint-staged",
    "test": "jest",
    "test:ci": "jest --coverage"
  },
  "repository": "ruyadorno/request-hash",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "MIT",
  "dependencies": {
    "cookie": "^0.5.0"
  }
}
